<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_weight=".45"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewArriba"
        android:layout_alignParentEnd="true"
        android:background="#ffffff">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:fontFamily="serif"
            android:textColor="#000000"
            android:background="#ffffff"
            android:id="@+id/codigoEntrada"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".10"
        android:layout_gravity="center">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/ejecBtn"
            android:src="@mipmap/playicon"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/cleanBtn"
            android:src="@mipmap/cleanicon"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/trashBtn"
            android:src="@mipmap/trashicon"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/helpBtn"
            android:src="@mipmap/helpicon"
            android:layout_gravity="center" />



    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".45"
        android:id="@+id/scrollViewAbajo"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/output"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"/>
    </ScrollView>

</LinearLayout>
